@import '../vars-mixins'
.mobile__header
	@media screen and (max-width: 960px)
		height 56px
		background $transp-dark
		z-index 20
		width 100%  
		position fixed
		clear both
		border-bottom 1px solid $border-grey
		depth(1)
		&__menu
			height 32px
			width 32px
			margin 12px
			background-image url('/img/menu.svg')
			background-repeat no-repeat
			background-size contain
			border-radius(5px)
			float left
			transition(all 0.4s)
			&:active
				background-color $transp-dark
		&__title
			float left
			line-height 48px
			margin 4px   
			font-weight 300   
			font-size 22px 
.side
	position fixed
	top 0
	bottom 0
	float left
	width 230px 
	background $purple-grey 
	depth(3)
	z-index 10 
	@media screen and (max-width: 960px)
		left -230px
		top 56px
		transition(all 0.4s)
		&.open
			left 0	
	&__header
		@media screen and (max-width: 960px)
			display none
		padding 10px 20px
		height 64px
		border-bottom 1px solid $border-grey
		&__title
			text-align center
			font-size 32px
			font-weight 300  
		&__social
			font-size 14px
			font-weight 600  
			transition(all 0.4s)
			cursor pointer
			padding 0 5px
			&:hover
				color $light-teal
	&__body
		padding 10px 0
		&__link
			cursor pointer
			padding 5px 10px
			display block
			background $light-teal 
			position relative
			transition(all 0.4s)
			&:after
				content ''
				position absolute
				height 100%
				width 5px
				background $grey 
				top 0
				right 0
				transition(all 0.2s)
			&:hover
				background $grey
				&:after
					background $red 
			&.active
				&:after
					background $red
	&__footer
		bottom 0
		position absolute
		overflow hidden
		width 100%
		padding 10px 20px
		border-top 1px solid $border-grey
.home__line.active
	height 2px
	background $light-teal
	width 90%
	margin 0 auto  