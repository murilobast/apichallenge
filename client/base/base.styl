@import '../vars-mixins'

.fixedBG
	position fixed
	z-index -1
	top 0
	bottom 0
	right 0
	left 0
	background-size cover 
.container
	background $transp-dark
	position fixed
	left 230px
	right 0 
	top 0
	bottom 0
	overflow-y auto
.content
	width 100%
	margin 0
	padding 10px
	&__header
		overflow hidden
		width 100% 
		border-bottom 1px solid $border-grey
		padding-bottom 10px
		margin-bottom 10px
	&__body	
		&__featured
			width 600px
			margin 0 auto 
			margin-bottom 20px
			overflow hidden
			border 1px solid $border-grey
			background $transp-white
			padding 10px 
			padding-top 0 
			text-align center
			depth(0)
			transition(all 0.4s ease)
			&:hover
				depth(3)
			&__header
				margin-bottom 10px 
				border-bottom 1px solid $border-grey
				&__number
					float left
					font-weight 400
				&__title
					line-height 30px
			&__image
				margin 10px 0
				width 200px
				display inline-block
			&__stats
				vertical-align top
				width 300px
				display inline-block
				& p
					line-height 30px
				&__kda
					font-weight 600 
					font-size 16px
			&__more
				width 100%
				display block
				text-align right
				font-weight 600 
				transition(all 0.4s)
				&:hover
					color $blue
					padding-right 5px 
		&__champions
			padding-top 10px
			border-top 1px solid $border-grey
			text-align center
			&__champion
				background $transp-white
				padding 10px
				padding-bottom 5px
				display inline-block
				width 45% 
				@media screen and (max-width: 1230px)
					width 90% 
				margin 10px 20px
				border 1px solid $border-grey
				transition(all 0.4s ease)
				depth(0)
				&:hover
					depth(3)
				&__image
					float left
					width 100px
					margin-right 10px
				&__rate
					float left 
					padding 0 10px
					border-left 1px solid $border-grey
					&__text
						line-height 26px
				&__info
					width 200px
					display inline-block 
					text-align center
					p
						line-height 26px 
				&__footer
					clear both
					&__number
						text-align left
						width 50%
						float left 
					&__more
						text-align right
						float right
						width 50%
						font-weight 600 
						transition(all 0.4s)
						&:hover
							color $blue
							padding-right 5px 
				




				
/* The text in center */
svg.ui-progress-circle #text.green 
	fill $grey-white

/* Background of mid circle */
svg.ui-progress-circle #background.green 
	fill #303035

/* Circle stroke around text */
svg.ui-progress-circle #stroke.green 
	stroke $light-teal
	opacity .5

/* Progress marker */
svg.ui-progress-circle #progress.green 
	fill $light-teal
