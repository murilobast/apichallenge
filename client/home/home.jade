template(name="home")
	.content
		.content__header
			h1.content__header__title I'm no pizzerino
			select
				option 1
				option 2
				option 3
				option 4
				option 5
				option 6
		.content__body
			.content__body__featured
				.content__body__featured__header
					h1.content__body__featured__header__number.count #1
					h3.content__body__featured__header__title {{first.name}}
					p.content__body__featured__header__subtitle.muted {{first.title}}
				img(src="http://ddragon.leagueoflegends.com/cdn/5.6.1/img/champion/{{first.key}}.png").content__body__featured__image.circle
				.content__body__featured__stats
					p.content__body__featured__stats__rate Win rate
					+progressCircle progress=winrate radius="50" class="green"
					p.content__body__featured__stats__kda KDA
					p.content__body__featured__stats__kda {{kda first}}
				a(href="").content__body__featured__more More info
			ul.content__body__champions
				each champions
					+champion

template(name="champion")
	li.content__body__champions__champion
		img(src="http://ddragon.leagueoflegends.com/cdn/5.6.1/img/champion/{{key}}.png").content__body__champions__champion__image.circle
		.content__body__champions__champion__rate
			p.content__body__champions__champion__rate__text Win rate
			+progressCircle progress=winrate radius="30" class="green"
		.content__body__champions__champion__info
			p.content__body__champions__champion__info__name {{name}}
			p.content__body__champions__champion__info__name {{title}}
			p.content__body__champions__champion__info__name {{kda}}
		.content__body__champions__champion__footer
			h3.content__body__champions__champion__footer__number.count #2
			a(href="").content__body__champions__champion__footer__more More info
